<!-- Views/Books/Delete.cshtml -->
@model LibrarySystem.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container-fluid">
    <h1>Delete Book</h1>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this book?</h3>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Title</dt>
                <dd class="col-sm-10">@Model.Title</dd>

                <dt class="col-sm-2">Author</dt>
                <dd class="col-sm-10">@Model.Author</dd>

                <dt class="col-sm-2">ISBN</dt>
                <dd class="col-sm-10">@Model.ISBN</dd>

                <dt class="col-sm-2">Status</dt>
                <dd class="col-sm-10">
                    @(Model.IsAvailable ? "Available" : "Borrowed")
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>