<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        #sidebar {
            min-height: 100vh;
            background-color: #343a40;
            padding-top: 20px;
        }

            #sidebar .nav-link {
                color: #fff;
                padding: 10px 20px;
                margin: 5px 15px;
                border-radius: 5px;
                transition: all 0.3s;
            }

                #sidebar .nav-link:hover {
                    background-color: #495057;
                }

                #sidebar .nav-link.active {
                    background-color: #007bff;
                }

                #sidebar .nav-link i {
                    margin-right: 10px;
                }

        .main-content {
            padding: 20px;
        }

        .dashboard-card {
            transition: transform 0.3s;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 px-0" id="sidebar">
                <div class="text-center mb-4">
                    <h4 class="text-white">Library System</h4>
                </div>
                <nav class="nav flex-column">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home fa-fw" style="width: 25px;"></i>
                        <span>Dashboard</span>
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Books" ? "active" : "")"
                       asp-controller="Books" asp-action="Index">
                        <i class="fas fa-book fa-fw" style="width: 25px;"></i>
                        <span>Books</span>
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Members" ? "active" : "")"
                       asp-controller="Members" asp-action="Index">
                        <i class="fas fa-users fa-fw" style="width: 25px;"></i>
                        <span>Members</span>
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Borrowing" ? "active" : "")"
                       asp-controller="Borrowing" asp-action="Index">
                        <i class="fas fa-exchange-alt fa-fw" style="width: 25px;"></i>
                        <span>Borrowings</span>
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>